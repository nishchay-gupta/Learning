<h1 class="page-title">New Employee</h1>

<div class="form-container">
  <%= form_for(@employee) do |form| %>
    <div class="form-field">
      <%= form.label :name, "Name:", class: "form-label" %>
      <%= form.text_field :name, class: "form-input" %>

      <%= form.label :name_confirmation, "Confirm Name" , class: "form-label" %>
      <%= form.text_field :name_confirmation , class: "form-input" %>
    </div>

    <div class="form-field">
      <%= form.label :gender, "Gender:", class: "form-label" %><br />
      <%= form.radio_button :gender, "Male", class: "radio-group" %>
      <%= form.label :gender_male, "Male", class: "form-label" %>
      <%= form.radio_button :gender, "Female", class: "radio-group" %>
      <%= form.label :gender_female, "Female", class: "form-label" %>
    </div><br/>

    <div class="form-field">
      <%= form.label :age, "Age:", class: "form-label" %>
      <%= form.number_field :age, class: "form-input" %>  
    </div>

    <div class="form-field">
      <%= form.label :address, "Address:", class: "form-label" %>
      <%= form.text_area :address, class: "form-input" %>
    </div>

    <div class="form-field">
      <%= form.label :department_id, "Department:", class: "form-label" %>
      <%= form.collection_select :department_id, Department.all, :id, :name, {}, { class: "form-input" } %>
    </div>

    <div class="checkbox-group">
      <%= form.check_box :accept_terms %>
      <%= form.label :accept_terms, "Accept Terms & Conditions", class: "form-label" %>
    </div>

    <%= form.submit "Create Employee", class: "submit-btn" %>
  <% end %>
</div>

<% if flash[:alert].present? %>
  <div class="error-box">
  <button class="close-btn" onclick="this.parentElement.style.display='none';">&times;</button>
    <h1 class="error-heading">Error!</h1>
    <ul>
      <% flash[:alert].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= link_to "Back to Employees", employees_path %>
