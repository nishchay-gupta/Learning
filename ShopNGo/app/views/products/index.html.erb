<h1>Products</h1>
<%= link_to "Create New Product", new_product_path %>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Price</th>
    <th>Stock</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td>$<%= product.price %></td>
      <td><%= product.stock %></td>
    </tr>
  <% end %>
</table>
