<h1>New Product</h1>

<%= form_with(model: @product, local: true) do |form| %>
  <div>
    <%= form.label :name, "Product Name" %>
    <%= form.text_field :name, placeholder: "Enter product name" %>
  </div>

  <div>
    <%= form.label :price, "Price (in $)" %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= form.label :stock, "Stock Quantity" %>
    <%= form.number_field :stock %>
  </div>

  <div>
    <%= form.label :description, "Product Description" %>
    <%= form.text_area :description, placeholder: "Enter product details" %>
  </div>

  <div class="checkbox-container">
    <%= form.check_box :available %>
    <%= form.label :available, "Available?" %>
  </div>

  <div>
    <%= form.label :category, "Category" %>
    <%= form.select :category, ["Electronics", "Clothing", "Books", "Accessories"], prompt: "Select a category" %>
  </div>

  <div class="checkbox-container">
    <%= form.check_box :accept_terms %>
    <%= form.label :accept_terms, "Accept Terms & Conditions" %>
  </div>

  <div>
    <%= form.submit "Save Product" %>
  </div>

<% end %>

<% if flash[:alert] %>
  <p class="error"><%= flash[:alert] %></p>
<% end %>


<%= link_to "Back to Products", products_path %>
<%= stylesheet_link_tag 'products_new' %>